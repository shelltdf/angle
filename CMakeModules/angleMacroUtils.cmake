#input ANGLE_SETUP_TARGET_NAME
#input ANGLE_SETUP_SOURCES
#input ANGLE_SETUP_HEADERS
MACRO(ANGLE_SETUP_LIBRARY NO_SOURCE_GROUP)

	# IF( ${NO_SOURCE_GROUP} EQUAL ON)
		SET(HEADERS_GROUP "Header Files")
		SOURCE_GROUP( ${HEADERS_GROUP} FILES ${ANGLE_SETUP_HEADERS})
	# ENDIF

    ANGLE_SETUP_FLAGS()
    ANGLE_SETUP_SELECT()

	IF(BUILD_STATIC_LIBRAY)
		ADD_DEFINITIONS(-DEGG_LIBRARY_STATIC)
		ADD_LIBRARY(${ANGLE_SETUP_TARGET_NAME} STATIC ${ANGLE_SETUP_HEADERS} ${ANGLE_SETUP_SOURCES})
	ELSE(BUILD_STATIC_LIBRAY)
		# ADD_DEFINITIONS(-DANGLE_LIBRARY)
		SET (LIBRARY_TAG  -D${ANGLE_SETUP_TARGET_NAME}_LIBRARY)
		STRING(TOUPPER ${LIBRARY_TAG} LIBRARY_TAG )
		# MESSAGE(${LIBRARY_TAG})
		ADD_DEFINITIONS(${LIBRARY_TAG})
		ADD_LIBRARY(${ANGLE_SETUP_TARGET_NAME} SHARED ${ANGLE_SETUP_HEADERS} ${ANGLE_SETUP_SOURCES})
	ENDIF(BUILD_STATIC_LIBRAY)
	
	
	SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES DEBUG_POSTFIX ${CMAKE_DEBUG_POSTFIX})

    IF(MSVC_IDE)
	IF(MSVC_IDE AND ${MSVC_VERSION} LESS 1600)
		SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES  PREFIX "../")
		SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES  IMPORT_PREFIX "../")
	ENDIF(MSVC_IDE AND ${MSVC_VERSION} LESS 1600)

	IF(MSVC_IDE AND ${MSVC_VERSION} EQUAL 1600)
		SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES RUNTIME_OUTPUT_DIRECTORY_RELEASE "../../bin")
		SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES RUNTIME_OUTPUT_DIRECTORY_DEBUG "../../bin")
		# SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES IMPORT_PREFIX "../")
		SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES ARCHIVE_OUTPUT_DIRECTORY_RELEASE "../../lib")
		SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES ARCHIVE_OUTPUT_DIRECTORY_DEBUG "../../lib")
	ENDIF(MSVC_IDE AND ${MSVC_VERSION} EQUAL 1600)
    ENDIF(MSVC_IDE)
    
    SET_TARGET_PROPERTIES(${ANGLE_SETUP_TARGET_NAME} PROPERTIES FOLDER "Core")
    

ENDMACRO(ANGLE_SETUP_LIBRARY)


#input ANGLE_SETUP_TARGET_NAME
#input ANGLE_SETUP_HEADERS
MACRO(ANGLE_SETUP_INSTALL)

	SET(INSTALL_INCDIR include)
	SET(INSTALL_BINDIR bin)
	IF(WIN32)
		SET(INSTALL_LIBDIR bin)
		SET(INSTALL_ARCHIVEDIR lib)
	ELSE(WIN32)
		SET(INSTALL_LIBDIR lib${LIB_POSTFIX})
		SET(INSTALL_ARCHIVEDIR lib${LIB_POSTFIX})
	ENDIF(WIN32)

	INSTALL(
		TARGETS ${ANGLE_SETUP_TARGET_NAME}
		RUNTIME DESTINATION ${INSTALL_BINDIR}
		LIBRARY DESTINATION ${INSTALL_LIBDIR}
		ARCHIVE DESTINATION ${INSTALL_ARCHIVEDIR}
	)

ENDMACRO(ANGLE_SETUP_INSTALL)

